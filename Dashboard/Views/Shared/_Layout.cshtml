<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Dashboard</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dashboard.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
</head>
<body>
    <header >
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">RISE Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                     
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class=" float-end">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class=" float-end">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        
                        <li class="nav-item dropdown ">
                            @*<a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Logs</a>*@
                            <button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" onclick="toggledropdown()">
                                Logs
                            </button>
                            <ul class="dropdown-menu dropdown-menu-dark" id="dropcontainer">
                                        <li><a class="dropdown-item" id="apis" name="apis" asp-area="" asp-controller="RequestResp" asp-action="Index" >Apis</a></li>
                                <li>
                                    <a class="dropdown-item" id="exceptions" name="exceptions" asp-area="" asp-controller="ExceptionData" asp-action="Index" >Exceptions</a>
                                </li>
                                   <li><a class="dropdown-item" id="insertqueries" asp-area="" asp-controller="InsertQuery" asp-action="Upload">InsertQuery</a>
                                </li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Mfpayment" asp-action="Index">MF Payments</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">US Payments</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">User Management</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Data Sanity</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Jsontoexcel" asp-action="Index">jsontoexcel</a></li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Links</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Figma</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">BRS</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">API Design Doc</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle text-white" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">API</a>
                            <div class="dropdown-menu dropdown-menu-dark">
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Search API</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Search Mapping</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Add API</a>
                                <a class="dropdown-item" asp-area="" asp-controller="" asp-action="">Add Mapping</a>
                                <a class="dropdown-item" mo-area="" asp-controller="" asp-action="">Test Vendor API</a>
                            </div>
                        </li>
                    </ul>
                   @* <form action="@Url.Action("Index", "RequestResp")" method="get" class="d-flex">
                        <i class="bi bi-search"></i>
                        <input class="form-control me-2"  type="text" name="query" placeholder="Search" aria-label="Search">
                        <button type="submit" class="btn btn-default">Search</button>
                        <button type="submit"></button>
                    </form>*@
                </div>
                
                
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top bg-dark footer  text-white">
        <div class="container ">
            &copy; 2023 - RISE Dashboard - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @*<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

